pipeline {
    agent any
    environment {
        USERNAME = 'Pritesh'
        PASSWORD = '123456'
        IMAGE = 'AMI'
        GIT_REPO = 'URL'
        DOMAIN = "XYZ.COM"
    }
    parameters {
        string(name: "NameParam", defaultValue: " ", description: "Please type your name")
        booleanParam(name: "Are you Human", defaultValue: "true", description: " ")
        choice(name: "Environment", choices: ['dev', 'qa', 'prod'], description: "Select your deployment Enviornment")
    }

    stages {
        stage('checkout SCM') {
            steps {
                sh '''
                   echo "${USERNAME}"
                   echo "${PASSWORD}"
                   echo "${GIT_REPO}"
                   echo "${BUILD_ID}"
                   echo "${NODE_NAME}"
                   echo "${NameParam}"
                   echo "${Environment}"
                '''
            }
        }
        
        stage('test') {
            input{
                message "please conform deployment to test"
            }
            steps {
                sh '''
                  echo "${USERNAME}"
                  echo "${IMAGE}"
                  calc 2024
                '''
            }
        }
        
        stage('Build') {
            input {
                message "please conform deplyment to Build"
            }
            steps {
                sh '''
                  echo "${USERNAME}"
                  echo "${DOMAIN}"
                '''
            }
        }

        stage('pre-prod') {
            steps {
                sh '''
                  echo "Deploy to Pre-Prod"
                '''
            }
        }

        stage('prod') {
            input {
                message "Please confirm deployment to prod"
            }
            steps {
                sh '''
                  echo "Deploy to Production"
                '''
            }
        }
    }
    post{
        always{
            echo "build was complete"
        }
        successfull{
            echo "build was successfull"

        }
        failed{
            echo "build was faild"
        }
        aborted{
            echo "build was aborted"
        }
    }
}
